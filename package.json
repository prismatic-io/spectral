{
  "name": "@prismatic-io/spectral",
  "version": "2.0.0-beta.9",
  "description": "Utility library for building Prismatic components",
  "keywords": [
    "prismatic"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://prismatic.io",
  "bugs": {
    "url": "https://github.com/prismatic-io/spectral"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prismatic-io/spectral.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn run format && yarn run lint && yarn run clean && tsc",
    "prepack": "yarn run build",
    "format": "yarn run lint-fix && prettier --loglevel error --write src/",
    "check": "prettier --check src/",
    "lint": "eslint --quiet --ext .ts,.js src/",
    "lint-fix": "eslint --fix --quiet --ext .ts,.js src/",
    "test": "jest --maxWorkers=4"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "date-fns": "2.17.0",
    "jest-mock": "26.6.2",
    "valid-url": "1.0.9"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/node": "14.14.35",
    "@types/valid-url": "1.0.3",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "24.0.2",
    "eslint-plugin-prettier": "3.1.3",
    "fast-check": "2.4.0",
    "jest": "27.0.4",
    "prettier": "2.0.5",
    "ts-jest": "27.0.2",
    "typedoc": "0.20.36",
    "typedoc-plugin-markdown": "2.3.1",
    "typescript": "3.9.9"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true
    },
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}
